{
  "name": "blissbay",
  "version": "2.0.0",
  "description": "BlissBay is an online e-commerce platform dedicated to offering wide range of trendy fashion from clothings to accessories. providing custormers with a seemless experience. @GabiDev2025 we build to make life easier for you",
  "main": "BlissApp.js",
  "type": "module",
  "scripts": {
    "start": "node BlissApp.js",
    "dev": "nodemon BlissApp.js",
    "test": "mocha --timeout 10000 test/**/*.test.mjs",
    "test:product": "mocha --timeout 10000 test/routes/productRoutes.test.mjs",
    "test:watch": "mocha --watch --timeout 10000 test/**/*.test.mjs",
    "test:coverage": "nyc --reporter=text --reporter=html mocha --timeout 10000 test/**/*.test.mjs",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose exec app npm test",
    "docker:test:product": "docker-compose exec app npm run test:product",
    "docker:clean": "docker-compose down --volumes --remove-orphans && docker system prune -a -f",
    "docker:rebuild": "npm run docker:clean && docker-compose build --no-cache",
    "docker:fresh": "npm run docker:rebuild && docker-compose up -d",
    "docker:logs": "docker logs bliss_backend",
    "docker:shell": "docker exec -it bliss_backend sh",
    "add-package": "echo 'Usage: npm install PACKAGE_NAME && npm run docker:rebuild'"
  },
  "author": "Adewale Gabriel",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "bullmq": "^5.52.2",
    "chai": "^5.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "handler": "^0.1.3",
    "ioredis": "^5.6.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.10.0",
    "nodemailer-sendgrid-transport": "^0.2.0",
    "sanitize-html": "^2.17.0",
    "stripe": "^18.0.0",
    "validator": "^13.15.0",
    "winston": "^3.17.0"
  },
  "keywords": [],
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "jest": "^29.7.0",
    "mocha": "^11.1.0",
    "mockingoose": "^2.16.2",
    "mongodb-memory-server-core": "^10.1.4",
    "nodemon": "^3.1.9",
    "sinon": "^20.0.0",
    "sinon-chai": "^4.0.0",
    "supertest": "^7.1.0"
  }
}
